  log_file=/var/log/contrail/collector.log
# log_files_count=10
# log_file_size=1048576 # 1MB
# log_level=SYS_NOTICE
# log_local=0
  syslog_port=-1
# test_mode=0

[COLLECTOR]
  port=8086
# server= 0.0.0.0

[DISCOVERY]
# port=5998
